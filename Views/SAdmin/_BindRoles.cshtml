@model IEnumerable<ApplicationModel.RoleMasterModel>
@{

    Layout = null;
}
<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            buttons: [
                {
                    extend: 'print',
                    exportOptions: {
                        columns: [0, 1, 2]
                    }
                },
                {
                    extend: 'excel',
                    exportOptions: {
                        columns: [0, 1, 2]
                    }
                },
                {
                    extend: 'csv',
                    exportOptions: {
                        columns: [0, 1, 2]
                    }
                },
                {
                    extend: 'copy',
                    exportOptions: {
                        columns: [0, 1, 2]
                    }
                },
                {
                    extend: 'pdf',
                    exportOptions: {
                        columns: [0, 1, 2]
                    }
                },
            ],
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
    });
</script>
<div class="card" width="100%">
    <div class="card-header">
        <h3 class="card-title">
            Role Details
        </h3>
    </div>

    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped" style="text-align :center;width:100%;">
            <thead>
                <tr>
                    <th>SNo</th>
                    <th>Role Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{ int count = 1; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            <a class="details" href="javascript:;" onclick="ViewClick(@item.RoleId,'View')">View</a>
                            <a class="details" href="javascript:;" onclick="ViewClick(@item.RoleId,'Add')">| Add</a>
                            <a class="details" href="javascript:;" onclick="ViewClick(@item.RoleId,'Edit')">| Edit</a>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3"></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<table id="dialog" style="display: none; width:100%;" width="100%">
</table>
<script type="text/javascript">
    $(function () {
        //$("#dialog").dialog({
        //    width: 800,
        //    autoOpen: false,
        //    modal: true,
        //    title: "Edit Tech Request",
        //});
    });
    function CloseDialog() {
        $("#dialog").dialog("close");
    }
    function ViewClick(id, type) {
        var reqId = id;
        $('#dialog').html('');
        if (type == "View") {
            $("#dialog").dialog({
                width: 800,
                autoOpen: false,
                modal: true,
                title: "Edit Tech Request",
            });
            $.ajax({
                type: "POST",
                url: "/SAdmin/_EditRequest",
                data: '{reqid: "' + reqId + '" }',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (response) {
                    $('#dialog').html(response);
                    $('#dialog').dialog('open');
                },
                failure: function (response) {
                    alert('failure');
                    alert(response.responseText);
                },
                error: function (response) {
                    alert('error');
                    alert(response.responseText);
                }
            });
        }
        else if (type == "Add") {
            $("#dialog").dialog({
                width: 800,
                autoOpen: false,
                modal: true,
                title: "Add Account Configuration",
            });
            $.ajax({
                type: "POST",
                url: "/Admin/_AddAccountConfiguration",
                //  data: '{reqid: "' + reqId + '" }',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (response) {
                    $('#dialog').html(response);
                    $('#dialog').dialog('open');
                },
                failure: function (response) {
                    alert('failure');
                    alert(response.responseText);
                },
                error: function (response) {
                    alert('error');
                    alert(response.responseText);
                }
            });
        }
        else if (type == "Edit") {
            $("#dialog").dialog({
                width: 800,
                autoOpen: false,
                modal: true,
                title: "Add Account Configuration",
            });
            $.ajax({
                type: "POST",
                url: "/Admin/_EditAccountConfiguration",
                data: '{id: "' + 1 + '" }',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (response) {
                    $('#dialog').html(response);
                    $('#dialog').dialog('open');
                },
                failure: function (response) {
                    alert('failure');
                    alert(response.responseText);
                },
                error: function (response) {
                    alert('error');
                    alert(response.responseText);
                }
            });
        }
        else {
            $("#dialog").dialog({
                width: 800,
                autoOpen: false,
                modal: true,
                title: "Tech Request Details",
            });
            $.ajax({
                type: "POST",
                url: "/SAdmin/_TecRequestHistory",
                data: '{reqid: "' + reqId + '" }',
                contentType: "application/json; charset=utf-8",
                dataType: "html",
                success: function (response) {
                    $('#dialog').html(response);
                    $('#dialog').dialog('open');
                },
                failure: function (response) {
                    alert('failure');
                    alert(response.responseText);
                },
                error: function (response) {
                    alert('error');
                    alert(response.responseText);
                }
            });
        }
    }
</script>
